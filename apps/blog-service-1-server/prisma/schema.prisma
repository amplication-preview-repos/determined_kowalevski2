datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  author         String?
  commentAuthor  String?
  commentContent String?
  content        String?
  createdAt      DateTime  @default(now())
  creationDate   DateTime?
  id             String    @id @default(cuid())
  post           Post?     @relation(fields: [postId], references: [id])
  postId         String?
  relatedPost    String?
  updatedAt      DateTime  @updatedAt
}

model Post {
  author      String?
  comments    Comment[]
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Category {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
